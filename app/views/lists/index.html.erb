<div class= "banner-container">
<h1> List </h1>
</div>
<div class= "cards">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <%= link_to 'Add a New list', new_list_path, class:'btn-danger' %>
        <% @lists.each do |list| %>
        <div class= "card">
          <h2><%= link_to list.name, list_path(list) %></h2>
          <%= link_to  "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
