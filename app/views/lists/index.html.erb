<div class= "banner-container">
<h1> List </h1>
</div>
  <div class="container">
      <%= link_to 'Add a New list', new_list_path, class:'btn-danger' %>
      <div class="cards">
        <% @lists.each do |list| %>
          <div class= "row">
            <div class= "col-sm-3">
              <div class="card" style="width: 18rem;">
                <%# <%= image_tag poster_url, class: "card-img-top" %>
                <div class="card-body">
                  <h2 class="card-text"><%= link_to list.name, list_path(list) %></h2>
                  <%= link_to  "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
